<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

    <!-- Startup -->
    <servlet>
        <servlet-name>QuartzInitializer</servlet-name>
        <servlet-class>org.quartz.ee.servlet.QuartzInitializerServlet</servlet-class>
        <init-param>
            <param-name>shutdown-on-unload</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>start-scheduler-on-load</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>StartupServlet</servlet-name>
        <servlet-class>com.ringfulhealth.bots.StartupServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>


    <servlet>
        <servlet-name>WatsonSpeechServlet</servlet-name>
        <servlet-class>com.ringfulhealth.chatbotbook.WatsonSpeechServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WatsonSpeechServlet</servlet-name>
        <url-pattern>/watson_speech</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WatsonSpeech2Servlet</servlet-name>
        <servlet-class>com.ringfulhealth.chatbotbook.WatsonSpeech2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WatsonSpeech2Servlet</servlet-name>
        <url-pattern>/watson_speech2</url-pattern>
    </servlet-mapping>


    <!-- Facebook -->
    <servlet>
        <servlet-name>FacebookNewsServlet</servlet-name>
        <servlet-class>com.ringfulhealth.bots.facebook.NewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FacebookNewsServlet</servlet-name>
        <url-pattern>/facebook/ibmdw</url-pattern>
    </servlet-mapping>

    <!-- Slack -->
    <servlet>
        <servlet-name>SlackNewsServlet</servlet-name>
        <servlet-class>com.ringfulhealth.bots.slack.NewsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SlackNewsServlet</servlet-name>
        <url-pattern>/slack/ibmdw</url-pattern>
    </servlet-mapping>

    <!-- Meta data -->
    <mime-mapping>
        <extension>jsp</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>html</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>

    <session-config>
        <session-timeout>1440</session-timeout>
    </session-config>

</web-app>
